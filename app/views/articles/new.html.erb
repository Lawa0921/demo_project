<h1>文章內容</h1>
<% if @article.errors.any?%>
  <ul>
    <% @article.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end%>

<%= form_for(@article) do |f| %>
  <div>
    <%= f.label :title, "標題" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content, "內文" %>
    <%= f.text_area :content %>
  </div>
  <%= f.submit %>
<% end %>